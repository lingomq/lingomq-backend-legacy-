#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["Services/Topics/WebApi/WebApi.csproj", "Services/Topics/WebApi/"]
COPY ["Services/Topics/Application/Application.csproj", "Services/Topics/Application/"]
COPY ["Services/EventBus/EventBus.csproj", "Services/EventBus/"]
COPY ["Services/Topics/DataAccess/DataAccess.Dapper/DataAccess.Dapper.csproj", "Services/Topics/DataAccess/DataAccess.Dapper/"]
COPY ["Services/Topics/Domain/Domain.csproj", "Services/Topics/Domain/"]
RUN cd ../ 
COPY ["../libs/LingoMqResponses/LingoMqResponses.csproj", "src/Libs/Responses/"]
RUN cd src 
RUN dotnet restore "./Services/Topics/WebApi/./WebApi.csproj"
COPY . .
WORKDIR "/src/Services/Topics/WebApi"
RUN dotnet build "./WebApi.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./WebApi.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Topics.WebApi.dll"]